#!/usr/bin/env sh

##############################################################################
##
##  ewscli start up script for UN*X
##
##############################################################################

# Escape application args
save () {
    for i do printf %s\\n "$i" | sed "s/'/'\\\\''/g;1s/^/'/;\$s/\$/' \\\\/" ; done
    echo " "
}

warn () {
    echo "$*" >&2
}

die () {
    echo
    echo "$*" >&2
    echo
    exit 1
}

# Attempt to set APP_HOME
# Resolve links: $0 may be a link
PRG="$0"
APP_NAME="ewscli"
# Follow "XDG Base Directory" in *NIX
APP_LOCAL="$HOME/.config/$APP_NAME"
SAVED="$(pwd)"

if [ ! -d "$APP_LOCAL" ] ;then
  mkdir -p "$APP_LOCAL"
  cd "$APP_LOCAL" || die "$APP_NAME:[ERROR] Failed to create the directory $APP_LOCAL"
fi

# Need this for relative symlinks.
while [ -h "$PRG" ] ; do
    ls=$(ls -ld "$PRG")
    link=$(expr "$ls" : '.*-> \(.*\)$')
    if expr "$link" : '/.*' > /dev/null; then
        PRG="$link"
    else
        PRG=$(dirname "$PRG")"/$link"
    fi
done
cd "$(dirname "$PRG")/../" >/dev/null || die "$APP_NAME:[ERROR] Check directory"
APP_HOME="$(pwd -P)"
cd "$SAVED" >/dev/null || die "$APP_NAME:[ERROR] Check directory"

# Add default JVM options here. You can also use JAVA_OPTS and EWSCLI_OPTS to pass JVM options to this script.
DEFAULT_JVM_OPTS=""

# Use the maximum available, or set MAX_FD != -1 to use that value.
MAX_FD="maximum"

# OS specific support (must be 'true' or 'false').
cygwin=false
darwin=false
nonstop=false
case "$(uname)" in
  CYGWIN* )
    cygwin=true
    ;;
  Darwin* )
    darwin=true
    ;;
  NONSTOP* )
    nonstop=true
    ;;
esac

JAVA_HOME="$APP_HOME/lib/$APP_NAME"
CLASSPATH="$JAVA_HOME/lib/*"
JAVACMD="$JAVA_HOME/bin/java"

# Increase the maximum file descriptors if we can.
if [ "$cygwin" = "false" ] && [ "$darwin" = "false" ] && [ "$nonstop" = "false" ] ; then
    # shellcheck disable=SC2181,SC2039
    MAX_FD_LIMIT=$(ulimit -H -n)
    # shellcheck disable=SC2181
    if [ $? -eq 0 ] ; then
        if [ "$MAX_FD" = "maximum" ] || [ "$MAX_FD" = "max" ] ; then
            MAX_FD="$MAX_FD_LIMIT"
        fi
        # shellcheck disable=SC2039
        if ulimit -n "$MAX_FD" ; then
            warn "Could not set maximum file descriptor limit: $MAX_FD"
        fi
    else
        warn "Could not query maximum file descriptor limit: $MAX_FD_LIMIT"
    fi
fi

APP_ARGS=$(save ${1+"$@"})

# Collect all arguments for the java command, following the shell quoting and substitution rules
# shellcheck disable=SC2086
eval set -- $DEFAULT_JVM_OPTS $JAVA_OPTS $EWSCLI_OPTS -classpath "\"$CLASSPATH\"" "$APP_NAME.Main" "$APP_ARGS"

# by default we should be in the correct project dir, but when run from Finder on Mac, the cwd is wrong
if [ "$(uname)" = "Darwin" ] && [ "$HOME" = "$PWD" ]; then
  cd "$(dirname "$0")" || die "$APP_NAME: : Failed to change directory to $(dirname "$0")"
fi

exec "$JAVACMD" ${1+"$@"}
